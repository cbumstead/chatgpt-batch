{
  "name": "vscode-chatgpt-batch",
  "publisher": "Chad Bumstead",
  "displayName": "ChatGPT Batch",
  "description": "Ask ChatGPT to perform multi-file batch changes such as code refactoring",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatgptBatch.processSelected",
        "title": "Process Files with ChatGPT"
      },
      {
        "command": "chatgptBatch.changeOpenAIAPIKey",
        "title": "ChatGPT Batch: Change OpenAI API key"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "chatgptBatch.processSelected",
          "group": "chatgptBatch.group",
          "when": "explorerResourceIsFolder || explorerResourceIsFile"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "pretest": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "jest": {
    "rootDir": "./",
    "moduleNameMapper": {
      "^vscode$": "out/__mocks__/vscode.js"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/out/*.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "openai": "^3.2.1",
    "vscode": "^1.1.37"
  }
}
